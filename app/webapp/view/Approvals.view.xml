<mvc:View
    controllerName="com.company.leavemanagement.controller.Approvals"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    
    <Page title="{i18n>approvals}" showNavButton="false">
        <content>
            <VBox class="sapUiMediumMargin">
                <!-- Header Toolbar -->
                <Toolbar>
                    <Title text="{i18n>approvals}" level="H2"/>
                    <ToolbarSpacer/>
                    <ComboBox 
                        width="12rem"
                        placeholder="Filter by Decision"
                        selectionChange="onFilterByDecision">
                        <items>
                            <core:Item key="All" text="All"/>
                            <core:Item key="APPROVED" text="Approved"/>
                            <core:Item key="REJECTED" text="Rejected"/>
                        </items>
                    </ComboBox>
                    <SearchField 
                        width="20rem" 
                        placeholder="Search approvals..." 
                        search="onSearch"
                        liveChange="onSearch"/>
                    <Button 
                        text="Export" 
                        icon="sap-icon://excel-attachment" 
                        press="onExportToExcel"/>
                    <Button 
                        text="Refresh" 
                        icon="sap-icon://refresh" 
                        press="onRefresh"/>
                </Toolbar>
                
                <!-- Approvals Table -->
                <Table 
                    id="approvalsTable"
                    items="{path: '/Approvals', parameters: {$expand: 'employee,manager'}}"
                    growing="true"
                    growingThreshold="20"
                    mode="None"
                    busy="{view>/busy}"
                    class="approvalTable sapUiResponsiveMargin">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="Approval History"/>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Text text="{i18n>employeeId}"/>
                        </Column>
                        <Column>
                            <Text text="Employee Name"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>manager}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>decision}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>comments}"/>
                        </Column>
                        <Column>
                            <Text text="Date"/>
                        </Column>
                        <Column width="8rem">
                            <Text text="Actions"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{employeeId}"/>
                                <Text text="{employee/name}"/>
                                <ObjectIdentifier 
                                    title="{managerName}"
                                    titleActive="false"/>
                                <ObjectStatus 
                                    text="{decision}"
                                    state="{path: 'decision', formatter: '.formatter.formatApprovalStatus'}"
                                    icon="{path: 'decision', formatter: '.formatter.getApprovalIcon'}"/>
                                <Text text="{comments}" maxLines="2"/>
                                <Text text="{path: 'createdAt', formatter: '.formatter.formatDate'}"/>
                                <HBox>
                                    <Button 
                                        icon="sap-icon://detail-view" 
                                        type="Transparent"
                                        tooltip="View Details"
                                        press="onApprovalDetails"/>
                                </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>
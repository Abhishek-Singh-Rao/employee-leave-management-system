<mvc:View
    controllerName="com.company.leavemanagement.controller.LeaveTypes"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    
    <Page title="{i18n>leaveTypes}" showNavButton="false">
        <content>
            <VBox class="sapUiMediumMargin">
                <!-- Header Toolbar -->
                <Toolbar>
                    <Title text="{i18n>leaveTypes}" level="H2"/>
                    <ToolbarSpacer/>
                    <SearchField 
                        width="20rem" 
                        placeholder="Search leave types..." 
                        search="onSearch"
                        liveChange="onSearch"/>
                    <Button 
                        text="{i18n>addLeaveType}" 
                        icon="sap-icon://add" 
                        type="Emphasized"
                        press="onAddLeaveType"/>
                    <Button 
                        text="Refresh" 
                        icon="sap-icon://refresh" 
                        press="onRefresh"/>
                </Toolbar>
                
                <!-- Leave Types Table -->
                <Table 
                    id="leaveTypesTable"
                    items="{/LeaveTypes}"
                    growing="true"
                    growingThreshold="20"
                    mode="None"
                    busy="{view>/busy}"
                    class="leaveTypeTable sapUiResponsiveMargin">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="Leave Type Configuration"/>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Text text="{i18n>leaveTypeCode}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>leaveTypeName}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>maxDays}"/>
                        </Column>
                        <Column width="12rem">
                            <Text text="Actions"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <ObjectIdentifier 
                                    title="{code}"
                                    titleActive="false"/>
                                <Text text="{name}"/>
                                <ObjectNumber 
                                    number="{maxDays}"
                                    unit="days"
                                    state="Success"/>
                                <HBox>
                                    <Button 
                                        icon="sap-icon://edit" 
                                        type="Transparent"
                                        tooltip="Edit Leave Type"
                                        press="onEditLeaveType"/>
                                    <Button 
                                        icon="sap-icon://delete" 
                                        type="Transparent"
                                        tooltip="Delete Leave Type"
                                        press="onDeleteLeaveType"/>
                                </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>
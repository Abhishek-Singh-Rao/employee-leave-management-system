<mvc:View
    controllerName="com.company.leavemanagement.controller.LeaveRequests"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    
    <Page title="{i18n>leaveRequests}" showNavButton="false">
        <content>
            <VBox class="sapUiMediumMargin">
                <!-- Header Toolbar -->
                <Toolbar>
                    <Title text="{i18n>leaveRequests}" level="H2"/>
                    <ToolbarSpacer/>
                    <ComboBox 
                        width="10rem"
                        placeholder="Filter by Status"
                        selectionChange="onFilterByStatus">
                        <items>
                            <core:Item key="All" text="All"/>
                            <core:Item key="Pending" text="Pending"/>
                            <core:Item key="Approved" text="Approved"/>
                            <core:Item key="Rejected" text="Rejected"/>
                        </items>
                    </ComboBox>
                    <SearchField 
                        width="20rem" 
                        placeholder="Search requests..." 
                        search="onSearch"
                        liveChange="onSearch"/>
                    <Button 
                        text="{i18n>newLeaveRequest}" 
                        icon="sap-icon://add" 
                        type="Emphasized"
                        press="onAddRequest"/>
                    <Button 
                        text="Refresh" 
                        icon="sap-icon://refresh" 
                        press="onRefresh"/>
                </Toolbar>
                
                <!-- Leave Requests Table -->
                <Table 
                    id="leaveRequestsTable"
                    items="{path: '/LeaveRequests', parameters: {$expand: 'employee,leaveType'}}"
                    growing="true"
                    growingThreshold="20"
                    mode="None"
                    busy="{view>/busy}"
                    class="requestTable sapUiResponsiveMargin">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="Leave Request List"/>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Text text="{i18n>employeeId}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>employeeName}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>leaveType}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>startDate}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>endDate}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>days}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>status}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>reason}"/>
                        </Column>
                        <Column width="12rem">
                            <Text text="Actions"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{employee_empId}"/>
                                <ObjectIdentifier 
                                    title="{employee/name}"
                                    text="{employee/email}"
                                    titleActive="false"/>
                                <Text text="{leaveType/name}"/>
                                <Text text="{path: 'startDate', formatter: '.formatter.formatDate'}"/>
                                <Text text="{path: 'endDate', formatter: '.formatter.formatDate'}"/>
                                <ObjectNumber 
                                    number="{days}"
                                    unit="days"/>
                                <ObjectStatus 
                                    text="{status}"
                                    state="{path: 'status', formatter: '.formatter.formatStatus'}"
                                    icon="{path: 'status', formatter: '.formatter.getStatusIcon'}"/>
                                <Text text="{reason}" maxLines="2"/>
                                <HBox>
                                    <Button 
                                        icon="sap-icon://accept" 
                                        type="Accept"
                                        tooltip="Approve Request"
                                        press="onApproveRequest"
                                        visible="{= ${status} === 'Pending'}"/>
                                    <Button 
                                        icon="sap-icon://decline" 
                                        type="Reject"
                                        tooltip="Reject Request"
                                        press="onRejectRequest"
                                        visible="{= ${status} === 'Pending'}"/>
                                </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>
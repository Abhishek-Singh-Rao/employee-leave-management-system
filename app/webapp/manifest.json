{
  "_version": "1.49.0",
  "sap.app": {
    "id": "com.company.leavemanagement",
    "type": "application",
    "i18n": "i18n/i18n.properties",
    "applicationVersion": {
      "version": "1.0.0"
    },
    "title": "{{appTitle}}",
    "description": "{{appDescription}}",
    "dataSources": {
      "mainService": {
        "uri": "/leave/",
        "type": "OData",
        "settings": {
          "annotations": [],
          "localUri": "localService/metadata.xml",
          "odataVersion": "4.0"
        }
      }
    }
  },
  "sap.ui": {
    "technology": "UI5",
    "icons": {
      "icon": "",
      "favIcon": "",
      "phone": "",
      "phone@2": "",
      "tablet": "",
      "tablet@2": ""
    },
    "deviceTypes": {
      "desktop": true,
      "tablet": true,
      "phone": true
    }
  },
  "sap.ui5": {
    "rootView": {
      "viewName": "com.company.leavemanagement.view.App",
      "type": "XML",
      "async": true,
      "id": "App"
    },
    "flexEnabled": true,
    "dependencies": {
      "minUI5Version": "1.108.0",
      "libs": {
        "sap.m": {},
        "sap.ui.core": {},
        "sap.f": {},
        "sap.suite.ui.commons": {}
      }
    },
    "models": {
      "i18n": {
        "dataSource": "i18n",
        "type": "sap.ui.model.resource.ResourceModel",
        "settings": {
          "bundleName": "com.company.leavemanagement.i18n.i18n"
        }
      },
      "": {
        "dataSource": "mainService",
        "type": "sap.ui.model.odata.v4.ODataModel",
        "settings": {
          "synchronizationMode": "None",
          "operationMode": "Server",
          "autoExpandSelect": true,
          "earlyRequests": true
        }
      }
    },
    "resources": {
      "css": [
        {
          "uri": "css/style.css"
        }
      ]
    },
    "routing": {
      "config": {
        "routerClass": "sap.m.routing.Router",
        "viewType": "XML",
        "async": true,
        "viewPath": "com.company.leavemanagement.view",
        "controlId": "app",
        "controlAggregation": "pages",
        "clearControlAggregation": false
      },
      "routes": [
        {
          "name": "dashboard",
          "pattern": "",
          "target": ["dashboard"]
        },
        {
          "name": "employees",
          "pattern": "employees",
          "target": ["employees"]
        },
        {
          "name": "requests",
          "pattern": "requests",
          "target": ["requests"]
        },
        {
          "name": "approvals",
          "pattern": "approvals",
          "target": ["approvals"]
        },
        {
          "name": "leavetypes",
          "pattern": "leavetypes",
          "target": ["leavetypes"]
        }
      ],
      "targets": {
        "dashboard": {
          "viewType": "XML",
          "transition": "slide",
          "clearControlAggregation": false,
          "viewId": "dashboard",
          "viewName": "Dashboard"
        },
        "employees": {
          "viewType": "XML",
          "transition": "slide",
          "clearControlAggregation": false,
          "viewId": "employees",
          "viewName": "Employees"
        },
        "requests": {
          "viewType": "XML",
          "transition": "slide",
          "clearControlAggregation": false,
          "viewId": "requests",
          "viewName": "LeaveRequests"
        },
        "approvals": {
          "viewType": "XML",
          "transition": "slide",
          "clearControlAggregation": false,
          "viewId": "approvals",
          "viewName": "Approvals"
        },
        "leavetypes": {
          "viewType": "XML",
          "transition": "slide",
          "clearControlAggregation": false,
          "viewId": "leavetypes",
          "viewName": "LeaveTypes"
        }
      }
    }
  }
}

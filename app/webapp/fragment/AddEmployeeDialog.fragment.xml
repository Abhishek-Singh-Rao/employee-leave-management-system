<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    
    <Dialog 
        title="{i18n>addEmployee}"
        type="Message"
        contentWidth="400px">
        <content>
            <VBox class="sapUiMediumMargin">
                <Label text="{i18n>employeeId}" required="true"/>
                <Input 
                    id="empIdInput"
                    value=""
                    placeholder="e.g., E005"
                    class="sapUiSmallMarginBottom"/>
                
                <Label text="{i18n>employeeName}" required="true"/>
                <Input 
                    id="nameInput"
                    value=""
                    placeholder="Full Name"
                    class="sapUiSmallMarginBottom"/>
                
                <Label text="{i18n>email}" required="true"/>
                <Input 
                    id="emailInput"
                    value=""
                    type="Email"
                    placeholder="email@example.com"
                    class="sapUiSmallMarginBottom"/>
                
                <Label text="{i18n>leaveBalance}"/>
                <Input 
                    id="leaveBalanceInput"
                    value="20"
                    type="Number"
                    class="sapUiSmallMarginBottom"/>
            </VBox>
        </content>
        <buttons>
            <Button 
                text="{i18n>save}" 
                type="Emphasized"
                press="onSaveEmployee"/>
            <Button 
                text="{i18n>cancel}" 
                press="onCancelAddEmployee"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
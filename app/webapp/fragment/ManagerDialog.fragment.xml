<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog
        id="managerDialog"
        title="{managerDialog>/title}"
        contentWidth="500px"
        afterClose="onManagerDialogClose">
        
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="12"
                    labelSpanS="12"
                    class="sapUiSmallMargin">
                    
                    <f:content>
                        <!-- Name Input -->
                        <Label text="Manager Name" required="true"/>
                        <Input
                            id="managerNameInput"
                            value="{managerDialog>/name}"
                            placeholder="e.g., John Smith"
                            required="true"
                            maxLength="100"/>

                        <!-- Email Input -->
                        <Label text="Email" required="true"/>
                        <Input
                            id="managerEmailInput"
                            value="{managerDialog>/email}"
                            placeholder="e.g., john.smith@company.com"
                            type="Email"
                            required="true"
                            maxLength="100"/>
                    </f:content>
                </f:SimpleForm>

                <!-- Validation Messages -->
                <VBox visible="{= ${managerDialog>/showValidation}}">
                    <MessageStrip
                        text="{managerDialog>/validationMessage}"
                        type="Error"
                        showIcon="true"
                        class="sapUiSmallMarginTop"/>
                </VBox>
            </VBox>
        </content>

        <beginButton>
            <Button
                text="{managerDialog>/buttonText}"
                type="Emphasized"
                press="onManagerDialogConfirm"/>
        </beginButton>

        <endButton>
            <Button
                text="Cancel"
                type="Transparent"
                press="onManagerDialogCancel"/>
        </endButton>

    </Dialog>

</core:FragmentDefinition>
<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    
    <Dialog 
        title="{i18n>newLeaveRequest}"
        type="Message"
        contentWidth="500px"
        contentHeight="600px">
        <content>
            <VBox class="sapUiMediumMargin">
                <Label text="{i18n>employeeName}" required="true"/>
                <ComboBox 
                    id="employeeSelect"
                    placeholder="Select Employee"
                    class="sapUiSmallMarginBottom"/>
                
                <Label text="{i18n>leaveType}" required="true"/>
                <ComboBox 
                    id="leaveTypeSelect"
                    placeholder="Select Leave Type"
                    class="sapUiSmallMarginBottom"/>
                
                <Label text="{i18n>startDate}" required="true"/>
                <DatePicker 
                    id="startDatePicker"
                    placeholder="Select Start Date"
                    class="sapUiSmallMarginBottom"
                    change="onDateChange"/>
                
                <Label text="{i18n>endDate}" required="true"/>
                <DatePicker 
                    id="endDatePicker"
                    placeholder="Select End Date"
                    class="sapUiSmallMarginBottom"
                    change="onDateChange"/>
                
                <Label text="Calculated Days"/>
                <Text 
                    id="calculatedDaysText"
                    text="0 days"
                    class="sapUiSmallMarginBottom"/>
                
                <Label text="{i18n>reason}"/>
                <TextArea 
                    id="reasonTextArea"
                    placeholder="Reason for leave request"
                    rows="4"
                    maxLength="500"
                    class="sapUiSmallMarginBottom"/>
            </VBox>
        </content>
        <buttons>
            <Button 
                text="{i18n>submit}" 
                type="Emphasized"
                press="onSaveRequest"/>
            <Button 
                text="{i18n>cancel}" 
                press="onCancelAddRequest"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
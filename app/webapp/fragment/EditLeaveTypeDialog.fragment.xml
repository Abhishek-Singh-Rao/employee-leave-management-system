<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    
    <Dialog 
        title="Edit Leave Type"
        type="Message"
        contentWidth="400px">
        <content>
            <VBox class="sapUiMediumMargin">
                <Label text="{i18n>leaveTypeCode}"/>
                <Input 
                    id="editLeaveTypeCodeInput"
                    value=""
                    enabled="false"
                    class="sapUiSmallMarginBottom"/>
                
                <Label text="{i18n>leaveTypeName}" required="true"/>
                <Input 
                    id="editLeaveTypeNameInput"
                    value=""
                    placeholder="e.g., Maternity Leave"
                    maxLength="40"
                    class="sapUiSmallMarginBottom"/>
                
                <Label text="{i18n>maxDays}" required="true"/>
                <Input 
                    id="editMaxDaysInput"
                    value=""
                    type="Number"
                    placeholder="e.g., 90"
                    class="sapUiSmallMarginBottom"/>
            </VBox>
        </content>
        <buttons>
            <Button 
                text="Update" 
                type="Emphasized"
                press="onUpdateLeaveType"/>
            <Button 
                text="{i18n>cancel}" 
                press="onCancelEditLeaveType"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
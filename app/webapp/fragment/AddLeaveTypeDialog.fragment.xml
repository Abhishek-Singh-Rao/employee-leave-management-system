<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    
    <Dialog 
        title="{i18n>addLeaveType}"
        type="Message"
        contentWidth="400px">
        <content>
            <VBox class="sapUiMediumMargin">
                <Label text="{i18n>leaveTypeCode}" required="true"/>
                <Input 
                    id="leaveTypeCodeInput"
                    value=""
                    placeholder="e.g., MATERNITY"
                    maxLength="10"
                    class="sapUiSmallMarginBottom"/>
                
                <Label text="{i18n>leaveTypeName}" required="true"/>
                <Input 
                    id="leaveTypeNameInput"
                    value=""
                    placeholder="e.g., Maternity Leave"
                    maxLength="40"
                    class="sapUiSmallMarginBottom"/>
                
                <Label text="{i18n>maxDays}" required="true"/>
                <Input 
                    id="maxDaysInput"
                    value=""
                    type="Number"
                    placeholder="e.g., 90"
                    class="sapUiSmallMarginBottom"/>
            </VBox>
        </content>
        <buttons>
            <Button 
                text="{i18n>save}" 
                type="Emphasized"
                press="onSaveLeaveType"/>
            <Button 
                text="{i18n>cancel}" 
                press="onCancelAddLeaveType"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>